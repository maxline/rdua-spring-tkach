<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleLogger" class="ua.rd.springtkach.loggers.ConsoleEventLogger"/>

    <bean id="fileLogger" class="ua.rd.springtkach.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="event_file.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="ua.rd.springtkach.loggers.CacheFileEventLogger"
          parent="fileLogger"
          init-method="init" destroy-method="destroy">
        <constructor-arg value="3"/>
    </bean>
</beans>