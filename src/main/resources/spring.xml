<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="ua.rd.springtkach.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <!--<bean id="eventLogger" class="ua.rd.springtkach.loggers.ConsoleEventLogger" />-->

    <!--<bean id="eventLogger" class="ua.rd.springtkach.loggers.FileEventLogger" init-method="init">-->
        <!--<constructor-arg value="event_file.txt"/>-->
    <!--</bean>-->

    <bean id="eventLogger" class="ua.rd.springtkach.loggers.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="event_file.txt"/>
        <constructor-arg value="3"/>
    </bean>

    <bean id="app" class="ua.rd.springtkach.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id="event" class="ua.rd.springtkach.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>


</beans>